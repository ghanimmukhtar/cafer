<?xml version="1.0" encoding="UTF-8"?>

<!-- Configuración del simulador para la creación de un robot que alcance un objeto rojo -->
<simulator>
    <scenario>
            <class>es.udc.gii.mdb.util.testing.collectcoin.CollectCoinWithDoorScenario</class>
            <toroidal>false</toroidal>
        <log>
            <path>__door/_log</path>
            <name>_scenario</name>
            <cycles>3</cycles>
        </log>
        <scenarioToPaint>
            <coin>
                <x>300</x>
                <y>-50</y>
            </coin>
            <box>
                <x>-250</x>
                <y>-250</y>
            </box>
            <button>
                <x>-300</x>
                <y>250</y>
                <target>Door(0)</target>
            </button>
            <wallWithDoor>
                <orientation>vertical</orientation>
                <coordinate>-50</coordinate>
                <thick>50</thick>
                <doorSize>600</doorSize>
                <doorCenter>0</doorCenter>
            </wallWithDoor>
        </scenarioToPaint>
    </scenario>


    <robot>
        <class>es.udc.gii.mdb.util.testing.collectcoin.MDBCoinCollectorRobot</class>
        <x>-150</x>
        <y>-200</y>
        <sensors>
            <sensor>
                <id>OpticalSensor(1)</id>
                <class>es.udc.gii.mdb.util.testing.robot.sensor.DistanceSinCosSensor</class>
                <config>
                    <sinAngleId>coinSinAngle</sinAngleId>
                    <cosAngleId>coinCosAngle</cosAngleId>
                    <distanceId>coinDistance</distanceId>
                    <color>#FF0000</color>
                    <position>0</position>
                    <range>1000</range>
                    <scope>360</scope>
                </config>
            </sensor>     
            <sensor>
                <id>OpticalSensor(2)</id>
                <class>es.udc.gii.mdb.util.testing.robot.sensor.DistanceSinCosSensor</class>
                <config>
                    <sinAngleId>boxSinAngle</sinAngleId>
                    <cosAngleId>boxCosAngle</cosAngleId>
                    <distanceId>boxDistance</distanceId>
                    <color>#0000FF</color>
                    <position>0</position>
                    <range>1000</range>
                    <scope>360</scope>
                </config>
            </sensor>    
            <sensor>
                <id>StateOpticalSensor(1)</id>
                <class>es.udc.gii.mdb.util.testing.robot.sensor.StateDistanceSinCosSensor</class>
                <config>
                    <sinAngleId>doorSinAngle</sinAngleId>
                    <cosAngleId>doorCosAngle</cosAngleId>
                    <distanceId>doorDistance</distanceId>
                    <stateId>doorState</stateId>
                    <color>#FFFF00</color>
                    <position>0</position>
                    <range>1000</range>
                    <scope>360</scope>
                    <state>0</state>
                </config>
            </sensor>   
            <sensor>
                <id>StateOpticalSensor(2)</id>
                <class>es.udc.gii.mdb.util.testing.robot.sensor.StateDistanceSinCosSensor</class>
                <config>
                    <sinAngleId>buttonSinAngle</sinAngleId>
                    <cosAngleId>buttonCosAngle</cosAngleId>
                    <distanceId>buttonDistance</distanceId>
                    <stateId>buttonState</stateId>
                    <color>#008B00</color>
                    <position>0</position>
                    <range>1000</range>
                    <scope>360</scope>
                    <state>0</state>
                </config>
            </sensor>    
            <sensor>
                <id>satisfaction</id>
                <class>es.udc.gii.mdb.util.testing.collectcoin.CoinCollectorSatisfactionSensor</class>
                <config>
                    <id>satisfaction</id>
                </config>
            </sensor> 

            <sensor>
                <id>LoadSensor</id>
                <class>es.udc.gii.mdb.util.testing.robot.sensor.LoadSensor</class>
                <config>
                    <id>load</id>
                </config>
            </sensor> 
            <sensor>
                <id>RewardSensor</id>
                <class>es.udc.gii.mdb.util.testing.robot.sensor.RewardSensor</class>
                <config>
                    <id>accomplished</id>
                    <reward>1.0</reward>
                </config>
            </sensor> 

            <sensor>
                <id>CrashSensor</id>
                <class>es.udc.gii.mdb.util.testing.robot.sensor.CrashSensor</class>
                <config>
                    <id>crash</id>
                    <reward>1.0</reward>
                </config>
            </sensor>  
        </sensors>

        <actuators>
            <actuator>
                <id>Motor</id>
                <class>es.udc.gii.mdb.util.testing.robot.actuator.AngleMotorActuator</class>
                <config>
                    <angularMDBSocket>
                        <id>motor</id>
                    </angularMDBSocket>
                    <linearSpeed>25</linearSpeed>
                </config>
            </actuator>
        </actuators>

        <loop>
            <component>
                <id>OpticalSensor(1)</id>
            </component>
            <component>
                <id>OpticalSensor(2)</id>
            </component>
            <component>
                <id>StateOpticalSensor(1)</id>
            </component>
            <component>
                <id>StateOpticalSensor(2)</id>
            </component>
            <component>
                <id>LoadSensor</id>
            </component>
             <component>
                <id>Motor</id>
            </component>
             <component>
                <id>OpticalSensor(1)</id>
            </component>
            <component>
                <id>OpticalSensor(2)</id>
            </component>
            <component>
                <id>StateOpticalSensor(1)</id>
            </component>
            <component>
                <id>StateOpticalSensor(2)</id>
            </component>
           <component>
                <id>LoadSensor</id>
            </component>
             <component>
                <id>satisfaction</id>
            </component> 
            <component>
                <id>RewardSensor</id>
            </component>
        </loop>

    </robot>

</simulator>
